<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.madlibs.InputActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noun"
        android:background="@color/colorTextIcons"
        android:padding="5dp"
        android:hint="noun"
        tools:layout_editor_absoluteY="96dp"
        tools:layout_editor_absoluteX="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verb"
        android:background="@color/colorTextIcons"
        android:padding="5dp"
        android:hint="verb"
        tools:layout_editor_absoluteY="96dp"
        tools:layout_editor_absoluteX="52dp"
        android:layout_below="@+id/noun"
        android:layout_alignRight="@+id/noun"
        android:layout_alignEnd="@+id/noun"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjective"
        android:background="@color/colorTextIcons"
        android:padding="5dp"
        android:hint="adjective"
        tools:layout_editor_absoluteY="96dp"
        tools:layout_editor_absoluteX="52dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/verb"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="submit"
        android:background="@color/colorPrimaryLight"/>



</RelativeLayout>
